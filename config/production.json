{
  "logging": {
    "level": "info"
  },
  "server": {
    "port": 3000
  },
  "postgresql": {
    "url": "${DATABASE_URL}"
  },
  "redis": {
    "url": "${REDIS_URL}"
  },
  "pubky": {
    "homeserverUrl": "${PUBKY_HOMESERVER_URL}",
    "botMnemonic": "${PUBKY_BOT_MNEMONIC}"
  },
  "ai": {
    "primaryProvider": "${AI_PRIMARY_PROVIDER}"
  },
  "mcp": {
    "brave": {
      "transport": "http",
      "baseUrl": "${BRAVE_MCP_BASE_URL}",
      "headers": {
        "Authorization": "${BRAVE_MCP_TOKEN}"
      }
    }
  },
  "blacklist": {
    "publicKeys": "${BLACKLIST_PUBLIC_KEYS}"
  }
}
