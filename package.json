{
  "name": "pubky-ai-bot",
  "version": "1.0.0",
  "description": "AI-powered Pubky bot with PostgreSQL, Redis Streams, and intelligent response generation",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/server.ts",
    "build": "tsc",
    "start": "node start.js",
    "db:migrate": "ts-node -r tsconfig-paths/register src/infrastructure/database/migrator.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "reprocess": "node scripts/reprocess.js",
    "reprocess:recent": "node scripts/reprocess.js -- --recent",
    "reprocess:limited": "node scripts/reprocess.js -- --limited",
    "check:failed": "psql $DATABASE_URL -f scripts/check-failed.sql",
    "docker:reprocess": "./scripts/docker-reprocess.sh",
    "docker:reprocess:recent": "./scripts/docker-reprocess.sh --recent",
    "docker:reprocess:limited": "./scripts/docker-reprocess.sh --limited",
    "docker:check:failed": "docker compose exec -T postgres psql -U pubkybot -d pubkybot -f /dev/stdin < scripts/check-failed.sql"
  },
  "keywords": [
    "pubky",
    "ai",
    "bot",
    "redis",
    "postgresql",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@ai-sdk/anthropic": "^2.0.40",
    "@ai-sdk/groq": "^2.0.27",
    "@ai-sdk/mcp": "^0.0.1",
    "@ai-sdk/openai": "^2.0.59",
    "@synonymdev/pubky": "^0.6.0-rc.6",
    "ai": "^5.0.85",
    "bip39": "^3.1.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "pg": "^8.11.3",
    "prom-client": "^15.1.0",
    "pubky-app-specs": "^0.4.0",
    "redis": "^4.6.10",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@types/pg": "^8.10.7",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "eslint": "^8.51.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
